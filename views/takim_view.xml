        <record id="karavan_takim_form" model="ir.ui.view">
            <field name="name">karavan.takim.form</field>
            <field name="model">karavan.takim</field>
            <field name="arch" type="xml">
                <form string="takim" edit="0">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="okul_id"/>
                            <field name="ilce_id"/>
                            <field name="member_ids" />




                        </group>

                    </group>


                </form>
            </field>
        </record>

